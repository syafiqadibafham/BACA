<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drawer"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ProfilePictureDrawer"
        android:layout_width="76dp"
        android:layout_height="97dp"
        android:layout_alignStart="@+id/hellofront"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="223dp"
        android:src="@drawable/ic_girl__1_" />

    <TextView
        android:id="@+id/hellofront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="622dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="343dp"
        android:fontFamily="@font/porky"
        android:text="Hello"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfilePicture"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="645dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="201dp"
        android:fontFamily="@font/simplyr_rounded"
        android:text="Username"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/age"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="179dp"
        android:fontFamily="@font/simplyr_rounded"
        android:text=" Years Old"
        android:textAlignment="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/editProfileTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="636dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="27dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_edit_profile"
        android:fontFamily="@font/simplyr_rounded"
        android:text="Edit Profile"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/changeProfileTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editProfileTxtV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="636dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:drawableLeft="@drawable/ic_change_user"
        android:fontFamily="@font/simplyr_rounded"
        android:gravity="center"
        android:text="Change User"
        android:textColor="@color/green"
        android:textSize="20sp" />


</RelativeLayout>